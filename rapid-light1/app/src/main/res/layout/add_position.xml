<?xml version="1.0" encoding="utf-8"?>
 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_register" >
 
<RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="true"
	android:focusableInTouchMode="true" 
	android:background="@color/bg_register"
	android:padding="50dp"
    tools:context="de.codenis.mdcs.AddPositionActivity" >

    
 		<TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/position_number" 
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/whiteDull"
        android:textAppearance="?android:attr/textAppearanceMedium" />
 		<EditText
            android:id="@+id/position_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hint="@string/position_number"
            android:padding="10dp"
            android:textSize="22sp"
	       	android:singleLine="true"
	       	android:textColorHint="@color/input_register_hint"
	       	android:background="@color/white" />
           
 		<TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/description_topic"
        android:textSize="22sp"
        android:layout_marginTop="120dp"
        android:textColor="@color/whiteDull" 
        android:textAppearance="?android:attr/textAppearanceMedium" />
 		
      	
        <Spinner
            android:id="@+id/description_topic"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:entries="@array/topic_list"
            android:maxHeight="450dp"
          	android:textColorHint="@color/input_register_hint"
	       	android:background="@color/grey" />
      	
      	
      	<TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toxic"
        android:textSize="22sp"
        android:layout_marginTop="120dp"
        android:layout_marginStart="400dp"
        android:textColor="@color/whiteDull" 
        android:textAppearance="?android:attr/textAppearanceMedium" />
	   <Spinner
            android:id="@+id/toxic"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginStart="380dp"
            android:maxHeight="450dp"
            android:entries="@array/substance_list"
          	android:textColorHint="@color/input_register_hint"
	       	android:background="@color/grey" />


	<!--<TextView
		android:id="@+id/textView8"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/investigation"
		android:textSize="22sp"
		android:layout_marginTop="220dp"
		android:textColor="@color/whiteDull"
		android:textAppearance="?android:attr/textAppearanceMedium" />-->
	<CheckBox
		android:id="@+id/investigation"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="250dp"
		android:layout_marginStart="70dp"
		android:scaleX="2.5"
		android:scaleY="2.5"
		android:textSize="9sp"
		android:textColor="@color/whiteDull"
		android:text="@string/investigation"
		android:buttonTint="@color/white"
		 />

	<TextView
		android:id="@+id/textView9"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/priority"
		android:textSize="22sp"
		android:layout_marginTop="220dp"
		android:layout_marginStart="400dp"
		android:textColor="@color/whiteDull"
		android:textAppearance="?android:attr/textAppearanceMedium" />
	<Spinner
		android:id="@+id/priority"
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="250dp"
		android:layout_marginStart="380dp"
		android:maxHeight="750dp"
		android:entries="@array/priority_list"
		android:textColorHint="@color/input_register_hint"
		android:background="@color/grey" />

	    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
