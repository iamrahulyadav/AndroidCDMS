        android:textSize="22sp"
        android:layout_marginTop="320dp"
        android:textColor="@color/whiteDull" 
        android:textAppearance="?android:attr/textAppearanceMedium" />
	      <EditText
            android:id="@+id/description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="22sp"
            android:hint="@string/description" 
            android:textColorHint="@color/input_register_hint"
            android:background="@color/white" >
        </EditText>
       
	    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/degree" 
        android:textSize="22sp"
        android:layout_marginTop="420dp"
        android:textColor="@color/whiteDull" 
        android:textAppearance="?android:attr/textAppearanceMedium" />
	    <EditText
            android:id="@+id/degree"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="22sp"
            android:hint="@string/degree" 
            android:textColorHint="@color/input_register_hint"
            android:background="@color/white" >
        </EditText>
        
	    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remark" 
        android:textSize="22sp"
        android:layout_marginTop="520dp"
        android:textColor="@color/whiteDull" 
        android:textAppearance="?android:attr/textAppearanceMedium" />
	    <EditText
            android:id="@+id/remark"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="550dp"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="22sp"
            android:hint="@string/remark" 
            android:textColorHint="@color/input_register_hint"
            android:background="@color/white" >
        </EditText>

	     <ImageView
            android:id="@+id/imageView1"
            android:layout_width="300dp"
	        android:layout_height="300dp"
	        android:layout_marginTop="620dp"
	        android:src="@drawable/ic_launcher" />
	     
	    <Button
            android:id="@+id/upload_image"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
          	android:layout_marginTop="920dp"
          	android:layout_marginStart="50dp"
          	android:onClick="selectImage"
            android:text="@string/photo1"
            android:textSize="22sp"
            android:textColorHint="@color/input_register_hint"
	       	android:background="@color/grey" />
        
	      <ImageView
            android:id="@+id/imageView2"
            android:layout_width="300dp"
	        android:layout_height="300dp"
	        android:layout_marginTop="620dp"
	        android:layout_marginStart="400dp"
	        android:src="@drawable/ic_launcher" />
	     
	    <Button
            android:id="@+id/upload_plan"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
          	android:layout_marginTop="920dp"
          	android:layout_marginStart="450dp"
          	android:onClick="selectImage2"
            android:text="@string/photo2"
            android:textSize="22sp"
            android:textColorHint="@color/input_register_hint"
	       	android:background="@color/grey" />
	          
        
        <Button
            android:id="@+id/save"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1070dp"
            android:layout_marginStart="250dp"
            android:onClick="onSave"
            android:text="@string/save"
            android:background="#ea4c88"
       		android:textColor="@color/white" />

         <Button
            android:id="@+id/back"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1070dp"
            android:onClick="onBack"
            android:text="@string/back"
            android:background="#ea4c88"
       		android:textColor="@color/white" />


        <Button
            android:id="@+id/delete"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1070dp"
            android:layout_marginStart="500dp"
            android:layout_marginEnd="25dp"
            android:onClick="onDeletePosition"
            android:text="Position LÃ¶schen"
            android:visibility="invisible"
            android:background="#ea4c88"
       		android:textColor="@color/white" />

</RelativeLayout>
</ScrollView>

